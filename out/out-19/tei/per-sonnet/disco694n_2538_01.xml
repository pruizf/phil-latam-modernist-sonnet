      <body>
         <head>Part of: <title>MAYÚSCULAS</title>
         </head>
         <lg type="sonnet" xml:id="s694n_2538_01">
            <head>I</head>
            <lg n="1" type="cuarteto">
               <l met="--+--+-" rhyme="A">El hermoso <w type="rhyme">Hilarión</w>
               </l>
               <l met="-++--+-" rhyme="B">sobre un fondo de <w type="rhyme">añil</w>,</l>
               <l met="+-+--+-" rhyme="B" enjamb="pb_noun_prep">pinta el raro <w type="rhyme">perfil</w>
               </l>
               <l met="-+-+-+-" rhyme="A">del cuerpo de un <w type="rhyme">dragón</w>.</l>
            </lg>
            <lg n="2" type="cuarteto">
               <l met="++--+-" rhyme="A">Un lirio de <w type="rhyme">Sión</w>,</l>
               <l met="-+---+-" rhyme="B">de cáliz de <w type="rhyme">marfil</w>,</l>
               <l met="++-+-+-" rhyme="B">flor de un divino <w type="rhyme">abril</w>,</l>
               <l met="-+---+-" rhyme="A">corona la <w type="rhyme">ilusión</w>.</l>
            </lg>
            <lg n="3" type="terceto">
               <l met="--+--+-" rhyme="C">En el salmo <w type="rhyme">triunfal</w>
               </l>
               <l met="++---+-" rhyme="C" enjamb="ex_subj_verb">un símbolo <w type="rhyme">inmortal</w>
               </l>
               <l met="-+---+-" rhyme="C">inicia de <w type="rhyme">Israel</w>.</l>
            </lg>
            <lg n="4" type="terceto">
               <l met="--+--+-" rhyme="C" enjamb="pb_adj_prep">La victoria <w type="rhyme">marcial</w>
               </l>
               <l met="--+--+-" rhyme="C" enjamb="pb_noun_prep">en la pálida <w type="rhyme">piel</w>
               </l>
               <l met="-+---+-" rhyme="C">del libro <w type="rhyme">medioeval</w>.</l>
            </lg>
         </lg>
      </body>
