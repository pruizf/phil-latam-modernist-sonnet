      <body>
         <lg type="sonnet" xml:id="s694n_2519">
            <head>UN SONETO PARA BEBÉ</head>
            <lg n="1" type="cuarteto">
               <l met="++-+--+-" rhyme="A">Un verso nuevo y <w type="rhyme">gentil</w>
               </l>
               <l met="--+---+-" rhyme="B">y metálico y <w type="rhyme">sonoro</w>;</l>
               <l met="+-+-+-+-" rhyme="B" enjamb="cc_crossclause">un precioso anillo <w type="rhyme">moro</w>
               </l>
               <l met="--+---+-" rhyme="A">que puliera el <w type="rhyme">esmeril</w>;</l>
            </lg>
            <lg n="2" type="cuarteto">
               <l met="+-+---+-" rhyme="A" enjamb="cc_crossclause">una rosa de <w type="rhyme">Abril</w>
               </l>
               <l met="-+-+--+-" rhyme="B">que dentro el pecho <w type="rhyme">atesoro</w>;</l>
               <l met="+-+-+-+-" rhyme="B" enjamb="pb_adj_noun">una perla en concha de <w type="rhyme">oro</w>
               </l>
               <l met="+--+--+-" rhyme="A">llena de aroma <w type="rhyme">sutil</w>.</l>
            </lg>
            <lg n="3" type="terceto">
               <l met="---+--+-" rhyme="C">Pues que tu lengua <w type="rhyme">interpreto</w>,</l>
               <l met="-+--+-+-" rhyme="D">idioma de luz y <w type="rhyme">miel</w>,</l>
               <l met="--+-+-+-" rhyme="C">te daría, niño <w type="rhyme">inquieto</w>,</l>
            </lg>
            <lg n="4" type="terceto">
               <l met="-+-+--+-" rhyme="D">envuelto en este <w type="rhyme">papel</w>,</l>
               <l met="+-++--+-" rhyme="C">un diamante hecho <w type="rhyme">soneto</w>
               </l>
               <l met="---+--+-" rhyme="-">para que juegues con <w type="rhyme">él</w>.</l>
            </lg>
         </lg>
      </body>
